<html>
  <head>
    <title>Frankie Financial Demo</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/styles.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,700;1,300;1,400&display=swap" rel="stylesheet">
    <!-- using frankie hosted widget file, instead of widget file in this repo -->
    <script src="./ff-onboarding-widget.umd.js"></script>
    <script>
      function ffSuccess(applicantReference) {
        alert(applicantReference);
      }
    </script>
  </head>
  <body responsive>
    <div id="content">
      <div>
        <h1><%= title %></h1>
      </div>
      <div>
        <ff-onboarding-widget width="FULL" height="FULL" applicant-reference="<%= applicantReference %>" ff="<%= ffToken %>" config="<%- encodeURI(JSON.stringify(widgetConfiguration)) %>"></ff-onboarding-widget>
      </div>
    </div>
  </body>
</html>
